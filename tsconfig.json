{
    "include": ["./src/index.ts"],
    "exclude": ["node_modules/*"],
    "compilerOptions": {
        "declaration": true,
        "inlineSourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["jest"],
        "importsNotUsedAsValues": "preserve",
        "noImplicitAny": false,
        "outDir": "dist",
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "esModuleInterop": true
    },
}